<h1><%= @show.title %></h1>
<p>
  <%= @show.description %>
</p>
<img src="<%=@show.image_url%>"/>

<% if @show.episodes %>
<ul>
  <% @show.episodes.each do |episode| %>
    <li>
      <a href="<%=show_episode_url(@show, episode)%>"><%= episode.title %></a>
      <% if episode.description %>
        <p><%= episode %></p>
      <% end %>
    </li>
  <% end %>
</ul>
<% end %>
<br>
<%= button_to "Other Shows on Network", network_url(@show.network_id), method: :get %>
