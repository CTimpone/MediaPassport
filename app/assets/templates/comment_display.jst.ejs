<div class="endorsement" data-id="<%=comment.id%>">
  <% if (comment.encodeURI("endorsed") === "true") {%>
    <a class="endorse" href="javascript:void(0)">Un-Endorse</a>
  <%} else {%>
    <a class="endorse" href="javascript:void(0)">Endorse</a>
  <% } %>
</div>
By: <%= comment.encodeURI('author')%>
<br>
<p>
  <div class="content" data-id="<%=comment.id%>">
    <%= comment.encodeURI('content') %>
  </div>
</p>

<a class="show-stuff" data-id="<%=comment.id%>" href="javascript:void(0)"><%=actionText%></a>
<div class="nested-comment-form" data-id="<%=comment.id%>"></div>
<ul class="comment-list-<%=comment.id%>"></ul>
