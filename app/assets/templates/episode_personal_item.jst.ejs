<div class="personal-item group">
  <a href="#shows/<%=encodeURIComponent(episode._show.get('title').replace(/ /g, '_'))%>/episodes/<%=encodeURIComponent(episode.get('title').replace(/ /g, '_'))%>">
    <strong><%= episode.escape('title') %></strong>
    <p>
      <%= episode._show.escape('title') %>(S<%=episode.escape('season')%>E<%=episode.escape('position')%>)
    </p>
  </a>
  <div class="extra-info">
    <p>
      <span>Description:</span>
      <%= episode.escape('description') %>
    </p>
  </div>
</div>
