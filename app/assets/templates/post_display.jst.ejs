<% if (post.get('show_title') && post.get('episode_title')) { %>
  <a href="#shows/<%=encodeURIComponent(post.get('show_title').replace(/ /g,'_'))%>/episodes/<%= encodeURIComponent(post.get('episode_title').replace(/ /g,'_'))%>">Return to: <%= post.escape('episode_title') %></a>
<% } %>
<% if (!session.isNew()) {%>
  <div class="endorsement" data-post-id="<%=post.id%>">
    <% if (post.escape("endorsed") === "true") {%>
      <a class="endorse" href="javascript:void(0)">Un-Endorse</a>
    <%} else {%>
      <a class="endorse" href="javascript:void(0)">Endorse</a>
    <% } %>
  </div>
<% } %>
<h1><%=post.escape('title')%></h1>
<p> By: <%= post.escape('author')%>
  <br>
  <%= post.escape('content') %>
</p>

